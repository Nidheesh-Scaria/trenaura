<head>
  <link rel="stylesheet" href="/css/adminHeader.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f5f6fa;
      margin: 0;
      padding: 0;
    }

    .main-content {
      flex: 1;
      padding: 30px;
    }

    .coupon-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    .coupon-header h2 {
      font-size: 24px;
      font-weight: bold;
      color: #132043;
    }

    .coupon-header button {
      background: linear-gradient(135deg, #e74c3c, #c0392b);
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 6px;
      cursor: pointer;
      font-size: 14px;
      transition: 0.3s;
    }

    .coupon-header button:hover {
      background: linear-gradient(135deg, #c0392b, #96281b);
      transform: scale(1.05);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    table th,
    table td {
      padding: 14px;
      text-align: center;
      border-bottom: 1px solid #eee;
      font-size: 14px;
    }

    table th {
      background: #132043;
      color: white;
      font-size: 15px;
    }

    table tr:hover {
      background: #f1f1f1;
    }

    .action-btn {
      border: none;
      padding: 8px 14px;
      border-radius: 6px;
      cursor: pointer;
      margin: 0 5px;
      font-size: 13px;
      transition: 0.3s;
    }

    .edit-btn {
      background: #3498db;
      color: white;
    }

    .edit-btn:hover {
      background: #2980b9;
    }

    .delete-btn {
      background: #e74c3c;
      color: white;
    }

    .delete-btn:hover {
      background: #c0392b;
    }

    /* Modal */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
      overflow-y: auto;
    }

    .modal-content {
      background: white;
      padding: 25px;
      border-radius: 10px;
      width: 420px;
      box-shadow: 0 6px 12px rgba(0,0,0,0.15);
      animation: fadeIn 0.3s ease-in-out;
    }
    .modal-content label {
      display: block;
      font-size: 13px;
      font-weight: 600;
      color: #333;
      margin-bottom: 6px;
    }

    .modal-content input,
    .modal-content select {
      margin-bottom: 18px;
    }


    @keyframes fadeIn {
      from { transform: translateY(-30px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    .modal-content h3 {
      margin-bottom: 18px;
      color: #132043;
      font-size: 20px;
      text-align: center;
    }

    .modal-content input,
    .modal-content select {
      width: 100%;
      padding: 12px;
      margin-bottom: 14px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 14px;
    }

    .modal-content button {
      padding: 10px 16px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 14px;
      transition: 0.3s;
    }

    .save-btn {
      background: #27ae60;
      color: white;
      margin-right: 10px;
    }

    .save-btn:hover {
      background: #1e8449;
    }

    .close-btn {
      background: #7f8c8d;
      color: white;
    }

    .close-btn:hover {
      background: #636e72;
    }

    .error-text {
      color: red;
      font-size: 13px;
      margin-bottom: 10px;
      text-align: center;
    }

    /* Grid Layout for Edit Modal 2 */
    .edit-form-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px 20px;
    }

    .edit-form-grid .form-group {
      display: flex;
      flex-direction: column;
    }

    .edit-form-grid .form-group label {
      font-size: 13px;
      font-weight: 600;
      margin-bottom: 6px;
      color: #444;
    }

    .edit-form-grid input,
    .edit-form-grid select {
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 14px;
    }

    .edit-form-grid .full-width {
      grid-column: span 2;
    }

    .modal-actions {
      grid-column: span 2;
      display: flex;
      justify-content: flex-end;
      gap: 10px;
    }


    

    /* DELETE MODAL STYLES */
    .delete-modal-content {
      background: white;
      padding: 30px;
      border-radius: 12px;
      width: 90%;
      max-width: 400px;
      text-align: center;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      animation: fadeInDown 0.4s ease-in-out;
    }

    .delete-icon {
      color: #e74c3c;
      font-size: 50px;
      margin-bottom: 20px;
      animation: shake 0.8s cubic-bezier(.36,.07,.19,.97) both;
    }

    .delete-modal-content h3 {
      color: #333;
      margin-bottom: 10px;
      font-size: 24px;
    }

    .delete-modal-content p {
      color: #666;
      font-size: 16px;
      margin-bottom: 25px;
    }

    .delete-actions {
      display: flex;
      justify-content: center;
      gap: 15px;
    }

    .delete-actions .save-btn {
      background: #e74c3c;
      color: white;
      padding: 10px 20px;
      border-radius: 6px;
      transition: 0.3s;
    }
    .delete-actions .save-btn:hover {
      background: #c0392b;
    }

    .delete-actions .close-btn {
      background: #7f8c8d;
      color: white;
      padding: 10px 20px;
      border-radius: 6px;
      transition: 0.3s;
    }

    .delete-actions .close-btn:hover {
      background: #636e72;
    }


    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translateY(-50px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes shake {
      10%, 90% {
        transform: translate3d(-1px, 0, 0);
      }
      20%, 80% {
        transform: translate3d(2px, 0, 0);
      }
      30%, 50%, 70% {
        transform: translate3d(-4px, 0, 0);
      }
      40%, 60% {
        transform: translate3d(4px, 0, 0);
      }
    }
  </style>
</head>

<div class="container">
  <main class="main-content">
    <div class="coupon-header">
      <h2>Coupon Management</h2>
      <button id="addCouponBtn" onclick="openModal()"><i class="fas fa-plus"></i> Add Coupon</button>
    </div>

    <table>
      <thead>
        <tr>
          <th>Code</th>
          <th>Discount Type</th>
          <th>Value</th>
          <th>Min Order</th>
          <th>Expiry Date</th>
          <th>Usage Limit</th>
          <th>Is Active</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each coupons}}
        <tr>
          <td>{{this.code}}</td>
          {{#if (eq this.discountType "flat")}}
          <td>Flat</td>
          {{else}}
          <td>Percentage</td>
          {{/if}}
          <td>{{this.discountValue}}</td>
          <td>{{this.minOrderValue}}</td>
          <td>{{this.expiryDateFormatted}}</td>
          <td>{{this.usageLimit}}</td>
          <td>{{#if this.isActive}} Yes{{else}} No{{/if}}</td>
          <td>
            <button class="action-btn edit-btn"
              onclick="openEditModal('{{this._id}}','{{this.code}}','{{this.discountType}}','{{this.discountValue}}','{{this.minOrderValue}}','{{ this.expiryDateFormatted}}','{{this.usageLimit}}','{{this.isActive}}')">
              <i class="fas fa-edit"></i> Edit
            </button>
            <button class="action-btn delete-btn" onclick="openDeleteModal('{{this._id}}')">
              <i class="fas fa-trash"></i> Delete
            </button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </main>
</div>

{{!-- Add Modal --}}
<div class="modal" id="addCouponModal">
  <div class="modal-content">
    <h3>Add Coupon</h3>
    <form id="addCouponForm">
      <input type="text" id="couponCode" placeholder="Coupon Code">
      <select id="couponDiscountType">
        <option value="">Select Discount Type</option>
        <option value="percentage">Percentage</option>
        <option value="flat">Flat</option>
      </select>
      <input type="number" id="couponDiscountValue" placeholder="Discount Value">
      <input type="number" id="couponMinOrder" placeholder="Minimum Order Value">
      <label for="date" style="color: #555; font-size: 13px;">Expiry Date</label>
      <input type="date" id="couponExpiry" name="date">
      <input type="number" id="couponUsageLimit" placeholder="Usage Limit">

      <p id="add-error" class="error-text"></p>
      <button type="submit" class="save-btn">Save</button>
      <button type="button" class="close-btn" onclick="closeModal()">Cancel</button>
    </form>
  </div>
</div>

{{!-- Edit Modal --}}
<div class="modal" id="editCouponModal">
  <div class="modal-content">
    <h3><i class="fas fa-edit"></i> Edit Coupon</h3>
    <form id="editCouponForm" class="edit-form-grid">
      <input type="hidden" id="editCouponId" name="id">

      <div class="form-group">
        <label for="editCouponCode">Coupon Code</label>
        <input type="text" id="editCouponCode" placeholder="Coupon Code" name="couponCode">
      </div>

      <div class="form-group">
        <label for="editCouponDiscountType">Discount Type</label>
        <select id="editCouponDiscountType" name="discountType">
          <option value="">Select</option>
          <option value="percentage">Percentage</option>
          <option value="flat">Flat</option>
        </select>
      </div>

      <div class="form-group">
        <label for="editCouponDiscountValue">Discount Value</label>
        <input type="number" id="editCouponDiscountValue" placeholder="Discount Value" name="discountValue">
      </div>

      <div class="form-group">
        <label for="editCouponMinOrder2">Minimum Order</label>
        <input type="number" id="editCouponMinOrder" placeholder="Minimum Order Value" name="minOrder">
      </div>

      <div class="form-group">
        <label for="editCouponExpiry" id="editCouponExpiryDate"></label>
        <input type="hidden" id="currentDate">
        <input type="date" id="editCouponExpiry" name="expiry" >
      </div>

      <div class="form-group">
        <label for="editCouponUsageLimit">Usage Limit</label>
        <input type="number" id="editCouponUsageLimit" placeholder="Usage Limit" name="usageLimit">
      </div>

      <div class="form-group full-width">
        <label for="editCouponIsActive">Status</label>
        <select id="editCouponIsActive" name="isActive">
          <option value="true">Active</option>
          <option value="false">Inactive</option>
        </select>
      </div>

      <p id="edit-error" class="error-text"></p>
      <div class="modal-actions">
        <button type="submit" class="save-btn">Update</button>
        <button type="button" class="close-btn" onclick="closeModal()">Cancel</button>
      </div>
    </form>
  </div>
</div>



{{!-- delete Modal --}}
<div class="modal" id="deleteCouponModal">
  <div class="delete-modal-content">
    <div class="delete-icon">
      <i class="fas fa-exclamation-triangle"></i>
    </div>
    <h3>Delete Coupon</h3>
    <form id="deleteCouponForm">
      <input type="hidden" id="deleteCouponId">
      <p><strong>Are you sure you want to delete this coupon?</strong></p>
      <div class="delete-actions">
        <button type="submit" class="save-btn">Yes, Delete</button>
        <button type="button" class="close-btn" onclick="closeModal()">Cancel</button>
      </div>
    </form>
  </div>
</div>

<script>
  const addModal = document.getElementById("addCouponModal");
  const editModal = document.getElementById("editCouponModal");
  const deleteModal = document.getElementById("deleteCouponModal");

  function closeModal() {
    addModal.style.display = "none";
    editModal.style.display = "none";
    deleteModal.style.display = "none";
  }

  function openModal() {
    document.getElementById("addCouponForm").reset();
    addModal.style.display = "flex";
  }

  // ADD COUPON
  document.getElementById("addCouponForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    document.getElementById("add-error").innerText ="";
    const code = document.getElementById("couponCode").value.toUpperCase();
    const discountType = document.getElementById("couponDiscountType").value;
    const discountValue = document.getElementById("couponDiscountValue").value;
    const minOrderValue = document.getElementById("couponMinOrder").value;
    const couponExpiry = document.getElementById("couponExpiry").value;
    const usageLimit = document.getElementById("couponUsageLimit").value;

    if (!code || !discountType || !discountValue || !minOrderValue || !couponExpiry || !usageLimit) {
      return document.getElementById("add-error").innerText = "All fields are mandatory";
    }
    if(new Date(couponExpiry) <= new Date()){
      return document.getElementById("add-error").innerText = "Expiry date should be valid";
    }

    const res = await fetch(`/admin/createCoupon`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ code, discountType, discountValue, minOrderValue, couponExpiry, usageLimit }),
    });

    if (res.ok) location.reload();
  });

  document.querySelectorAll("#addCouponForm input, #addCouponForm select")
  .forEach(el => {
    el.addEventListener("input", () => {
      document.getElementById("add-error").innerText = "";
    });
  });

  // EDIT COUPON
  function openEditModal(id, code, discountType, discountValue, minOrderValue, expiryDateFormatted, usageLimit, isActive) {
    editModal.style.display = "flex";
    document.getElementById("editCouponId").value = id;
    document.getElementById("editCouponCode").value = code;
    document.getElementById("editCouponDiscountType").value = discountType;
    document.getElementById("editCouponDiscountValue").value = discountValue;
    document.getElementById("editCouponMinOrder").value = minOrderValue;
    document.getElementById("editCouponExpiryDate").innerHTML = `Expires on:${expiryDateFormatted}`
    document.getElementById("editCouponUsageLimit").value = usageLimit;
    document.getElementById("editCouponIsActive").value = isActive === "true" ? "true" : "false"; 
    document.getElementById("currentDate").value=expiryDateFormatted
  }

  document.getElementById("editCouponForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    document.getElementById("edit-error").innerText ="";
    const id = document.getElementById("editCouponId").value;
    const couponCode = document.getElementById("editCouponCode").value.toUpperCase();
    const discountType = document.getElementById("editCouponDiscountType").value;
    const discountValue = document.getElementById("editCouponDiscountValue").value;
    const minOrderValue = document.getElementById("editCouponMinOrder").value;
    const couponExpiry = document.getElementById("editCouponExpiry").value;
    const usageLimit = document.getElementById("editCouponUsageLimit").value;
    const isActive = document.getElementById("editCouponIsActive").value === "true";
    const currentDate=document.getElementById("currentDate").value

    if (!couponCode || !discountType || !discountValue || !minOrderValue || !couponExpiry || !usageLimit) {
      return document.getElementById("edit-error").innerText = "All fields are mandatory";
    }
    if(new Date(couponExpiry) <= new Date()){
      return document.getElementById("edit-error").innerText = "Expiry date should be valid";
    }
    


    const res = await fetch(`/admin/editCoupon/${id}`, {
      method: "PUT",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ couponCode, discountType, discountValue, minOrderValue, couponExpiry, usageLimit, isActive }),
    });

    if (res.ok) location.reload();
  });

  document.querySelectorAll("#editCouponForm input, #editCouponForm select")
  .forEach(el => {
    el.addEventListener("input", () => {
      document.getElementById("edit-error").innerText = "";
    });
  });

  // DELETE COUPON
  function openDeleteModal(id) {
    deleteModal.style.display = "flex";
    document.getElementById("deleteCouponId").value = id;
  }
  
  document.getElementById("deleteCouponForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    const id = document.getElementById("deleteCouponId").value;
    const res = await fetch(`/admin/deleteCoupon/${id}`, {
      method: "DELETE",
      headers: { "Content-type": "application/json" }
    }); 

    if (res.ok) location.reload();
  });
</script>