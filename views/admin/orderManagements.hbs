              id="order-status" 
              class="status 
                {{#if (eq orders.status "Pending")}}pending
                {{else if (eq orders.status "Processing")}}processing
                {{else if (eq orders.status "Shipped")}}shipped
                {{else if (eq orders.status "OutForDelivery")}}out-for-delivery
                {{else if (eq orders.status "Delivered")}}delivered
                {{else if (eq orders.status "Cancelled")}}cancelled
                {{else if (eq orders.status "Returned")}}returned
