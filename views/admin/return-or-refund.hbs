        /*STATUS BADGES (RETURN STATUS)*/
        .status {
            padding: 7px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 700;
            display: inline-block;
            text-align: center;
            min-width: 100px;
            text-transform: uppercase;
            letter-spacing: 0.3px;
            transition: all 0.3s ease;
        }

       
        /* Pending - Orange/Yellow */
        .status-pending {
            
            color: #ff9f1c;
           
        }

        /* Accepted/Approved - Blue */
        .status-accepted {
            
            color: #100ba1;
            
        }

        /* Rejected - Red */
        .status-rejected {
            
            color: #a40909;
            
        }

        /*REFUND STATUS STYLES*/
        .refund-status {
            display: inline-block;
            padding: 7px 16px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 700;
            text-align: center;
            min-width: 100px;
            transition: all 0.3s ease;
            
            text-transform: uppercase;
            letter-spacing: 0.3px;
        }

    

        /* Paid - Green */
        .refund-paid {
            
            color: #028a22 ;
            font-weight: 700;
        }

        /* Unpaid - Red */
        .refund-unpaid {
            
            color: #ff0202;
            font-weight: 700;
        }

        /* Pending - Yellow/Orange */
        .refund-pending {
           
            color: #ff9f1c;
            font-weight: 700;
        }

        /* ================================
   ACTION BUTTONS
   ================================ */
        .action-btn {
            padding: 9px 18px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-size: 0.875rem;
            font-weight: 600;
            margin: 0 4px;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
