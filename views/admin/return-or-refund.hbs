<script>
    function viewReturn(event, id) {
        console.log(id)
        event.preventDefault();
        try {
            window.location.href = `/admin/reviewReturn/${id}`;
        } catch (error) {
            console.error("Error navigating to order management:", error);
        }
    }


    async function acceptReturn(event, id) {
        event.preventDefault();
        console.log("acceptReturn id:", id);

        try {
            const isAccepted = true;

            const res = await fetch(`/admin/changeReturnStatus/${id}`, {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ isAccepted })
            });

            const data = await res.json();

            if (res.ok) {
                Toastify({
                    text: data.message,
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "center",
                    style: {
                        background: "linear-gradient(to right, #0f2027, #203a43, #2c5364)",
                    },
                    className: "custom-toast"
                }).showToast();

            } else {
                Toastify({
                    text: data.message,
                    duration: 3000,
                    close: true,
                    gravity: "top",
                    position: "center",
                    style: {
                        background: "linear-gradient(to right, #0f2027, #203a43, #2c5364)",
                    },
                    className: "custom-toast"
                }).showToast();
            }

        } catch (error) {
            console.error("Error accepting return:", error);
            Swal.fire({
                icon: "error",
                title: "Oops!",
                text: "Server error. Please try again later."
            });
        }
    }

