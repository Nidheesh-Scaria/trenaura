    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #fff;
        }

        /* Header */
        .header-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 5px 5%;
            border-bottom: 1px solid #ccc;
        }

        .logo {
            font-size: 30px;
            font-weight: bold;
            color: #1a237e;
            text-transform: lowercase;
        }

        .header-icons a {
            margin-left: 20px;
            font-size: 20px;
            color: #000;
            position: relative;
            text-decoration: none;
        }

        .header-icons .cart-badge {
            position: absolute;
            top: -8px;
            right: -10px;
            background-color: orange;
            color: #fff;
            font-size: 12px;
            padding: 2px 6px;
            border-radius: 50%;
        }

        nav {
            text-align: center;
            border-bottom: 1px solid #ccc;
        }

        nav ul {
            list-style: none;
            display: inline-flex;
            gap: 65px;
            padding: 15px 0;
        }

        nav a {
            text-decoration: none;
            color: #000;
            font-weight: bold;
            font-size: small;
        }

        /* Footer */
        footer {
            background-color: #111;
            color: #fffdfd;
            padding: 40px 5%;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .footer-brand {
            flex: 1 1 250px;
            max-width: 300px;
        }

        .footer-brand h2 {
            font-size: 28px;
            color: #fff;
        }

        .footer-brand p {
            font-size: 14px;
            margin: 15px 0;
            line-height: 1.5;
        }

        .footer-brand strong {
            display: block;
            margin-top: 15px;
        }

        .footer-col {
            flex: 1 1 200px;
            margin-top: 20px;
        }

        .footer-col h3 {
            margin-bottom: 10px;
            font-size: 16px;
        }

        .footer-col ul {
            list-style: none;
        }

        .footer-col li {
            margin-bottom: 8px;
            font-size: 12px;
        }

        .footer-col li a {
            color: #ccc;
            text-decoration: none;
        }

        .footer-col li a:hover {
            color: #fff;
        }

        .top-bar {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10rem;
            padding: 15px 0;
        }

        .top-bar .info {
            font-size: smaller;
            color: #727272;
        }

        .cart-icon-link {
            position: relative;
            font-size: 22px;
            color: #1a1a1a;
            display: inline-block;
            transition: transform 0.2s ease;
        }

        .cart-icon-link:hover {
            color: orange;
            transform: scale(1.1);
        }

        .cart-icon-link .cart-badge {
            position: absolute;
            top: -6px;
            right: -10px;
            background: #ff6f00;
            color: #fff;
            font-size: 11px;
            padding: 3px 6px;
            border-radius: 50%;
            font-weight: bold;
            line-height: 1;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }

        /* RESPONSIVE STYLES */
        @media (max-width: 1024px) {
            nav ul {
                gap: 40px;
            }

            .top-bar {
                flex-direction: column;
                gap: 1rem;
            }
        }

        @media (max-width: 768px) {
            nav ul {
                flex-direction: column;
                gap: 10px;
            }

            .footer {
                flex-direction: column;
                gap: 30px;
                padding: 30px 5%;
            }

            .footer-col {
                flex: 1 1 100%;
            }

            .footer-brand {
                max-width: 100%;
            }

            .top-bar {
                gap: 1rem;
            }
        }

        @media (max-width: 480px) {
            .logo {
                font-size: 24px;
            }

            .cart-icon-link {
                font-size: 20px;
            }

            .footer-col h3 {
                font-size: 14px;
            }

            .footer-col li {
                font-size: 11px;
            }

            .footer-brand p {
                font-size: 13px;
            }
        }
    </style>


