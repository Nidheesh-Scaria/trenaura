        .text-content p:nth-child(2) { animation-delay: 1s; }
        .text-content p:nth-child(3) { animation-delay: 1.2s; }
        .text-content p:nth-child(4) { animation-delay: 1.4s; }

        @keyframes fadeInText {
            to {
                opacity: 1;
                transform: translateX(0);
            }
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
        }

        .highlight {
            color: #4a6fb5;
            font-weight: bold;
            position: relative;
            text-shadow: 0 0 10px rgba(35, 60, 121, 0.5);
        }

        .image-container {
            position: relative;
            animation: fadeInRight 1.2s ease-out 0.8s both;
            perspective: 1000px;
        }

        .clothing-image {
            width: 100%;
            height: 500px;
            object-fit: cover;
            border-radius: 20px;
            border: 3px solid #233c79;
            transition: all 0.5s ease;
            box-shadow: 0 20px 60px rgba(35, 60, 121, 0.3);
            transform-style: preserve-3d;
        }

        .clothing-image:hover {
            transform: scale(1.05) rotateY(5deg);
            box-shadow: 0 30px 80px rgba(35, 60, 121, 0.6),
                        0 0 40px rgba(35, 60, 121, 0.4);
            border-color: #4a6fb5;
        }

        /* Stats Section */
        .stats-section {
            background: linear-gradient(135deg, #233c79 0%, #1a2e5c 50%, #233c79 100%);
            padding: 80px 0;
            margin: 100px 0;
            border-radius: 30px;
            position: relative;
            overflow: hidden;
            animation: slideInUp 1s ease-out 1.2s both;
            box-shadow: 0 30px 80px rgba(35, 60, 121, 0.4),
                        inset 0 0 100px rgba(0, 0, 0, 0.3);
        }

        .stats-section::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
            background-size: 30px 30px;
            animation: rotatePattern 30s linear infinite;
        }

        @keyframes rotatePattern {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 50px;
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .stat-item {
            color: #fff;
            transition: all 0.4s ease;
            position: relative;
            padding: 20px;
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
        }

        .stat-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border-radius: 15px;
            padding: 2px;
            background: linear-gradient(45deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            animation: borderRotate 3s linear infinite;
        }

        @keyframes borderRotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .stat-item:hover {
            transform: translateY(-15px) scale(1.05);
            background: rgba(255, 255, 255, 0.1);
        }

        .stat-number {
            font-size: 4rem;
            font-weight: 900;
            margin-bottom: 15px;
            background: linear-gradient(135deg, #fff 0%, #4a6fb5 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            animation: countAnimation 2s ease-out 1.5s both;
        }

        @keyframes countAnimation {
            0% {
                opacity: 0;
                transform: scale(0.5);
            }
            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        .stat-label {
            font-size: 1.3rem;
            font-weight: 600;
            letter-spacing: 1px;
        }

        /* Locations Section */
        .locations-section {
            padding: 100px 0;
        }

        .locations-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 40px;
            margin-top: 70px;
        }

        .location-card {
            background: linear-gradient(135deg, #0a0a0a, #1a1a2e);
            padding: 40px;
            border-radius: 20px;
            border: 2px solid #233c79;
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: all 0.5s ease;
            animation: fadeInUp 1s ease-out calc(1.5s + var(--delay)) both;
        }

        .location-card::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(35, 60, 121, 0.1), transparent);
            animation: cardGlow 4s ease-in-out infinite;
        }

        @keyframes cardGlow {
            0%, 100% { transform: translate(0, 0); }
            50% { transform: translate(10%, 10%); }
        }

        .location-card:nth-child(1) { --delay: 0s; }
        .location-card:nth-child(2) { --delay: 0.3s; }
        .location-card:nth-child(3) { --delay: 0.6s; }

        .location-card:hover {
            transform: translateY(-15px) scale(1.03);
            box-shadow: 0 30px 60px rgba(35, 60, 121, 0.4),
                        0 0 40px rgba(35, 60, 121, 0.3);
            border-color: #4a6fb5;
        }

        .location-card h4 {
            font-size: 2rem;
            color: #4a6fb5;
            margin-bottom: 20px;
            position: relative;
            z-index: 1;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .location-card p {
            color: #cccccc;
            font-size: 1.1rem;
            line-height: 1.8;
            position: relative;
            z-index: 1;
        }

        /* Floating particles */
        .particle {
            position: fixed;
            width: 3px;
            height: 3px;
            background: #233c79;
            border-radius: 50%;
            pointer-events: none;
            animation: float 8s infinite ease-in-out;
            z-index: 0;
            box-shadow: 0 0 10px #233c79;
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(100vh) translateX(0) scale(0);
                opacity: 0;
            }
            10% {
                opacity: 1;
                transform: scale(1);
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(-100px) translateX(100px) scale(0);
                opacity: 0;
            }
        }

        /* General animations */
        @keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(40px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeInLeft {
            0% {
                opacity: 0;
                transform: translateX(-40px);
            }
            100% {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes fadeInRight {
            0% {
                opacity: 0;
                transform: translateX(40px);
            }
            100% {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideInUp {
            0% {
                opacity: 0;
                transform: translateY(60px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

