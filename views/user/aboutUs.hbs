            padding: 80px 0;
            position: relative;
        }

        .logo {
            width: 180px;
            height: 180px;
            margin: 0 auto 40px;
            border-radius: 50%;
            border: 4px solid #233c79;
            padding: 15px;
            background: radial-gradient(circle, #000, #1a1a2e);
            position: relative;
            animation: logoRotate 20s linear infinite;
            box-shadow: 0 0 40px rgba(35, 60, 121, 0.5),
                        0 0 80px rgba(35, 60, 121, 0.3),
                        inset 0 0 20px rgba(35, 60, 121, 0.2);
        }

        .logo::before {
            content: '';
            position: absolute;
            top: -4px;
            left: -4px;
            right: -4px;
            bottom: -4px;
            border-radius: 50%;
            background: linear-gradient(45deg, #233c79, transparent, #233c79);
            animation: borderPulse 3s ease-in-out infinite;
            z-index: -1;
        }

        @keyframes logoRotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(0deg); }
        }

        @keyframes borderPulse {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 1; }
        }

        .logo:hover {
            transform: scale(1.1);
            box-shadow: 0 0 60px rgba(35, 60, 121, 0.8),
                        0 0 120px rgba(35, 60, 121, 0.5);
        }

        .logo img {
