            text-transform: uppercase;
            letter-spacing: 3px;
            text-shadow: 0 0 40px rgba(35, 60, 121, 0.5);
        }

        @keyframes titleShine {
            0% { background-position: 0% center; }
            100% { background-position: 200% center; }
        }

        .subtitle {
            font-size: 1.4rem;
            color: #aaaaaa;
            margin-bottom: 40px;
            animation: fadeInUp 1.5s ease-out 0.5s both;
            letter-spacing: 2px;
        }

        /* About Section */
        .about-section {
            padding: 100px 0;
            position: relative;
        }

        .section-title {
            font-size: 3rem;
            text-align: center;
            margin-bottom: 70px;
            color: #233c79;
            position: relative;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 4px;
            animation: slideInDown 1s ease-out;
        }

        .section-title::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, transparent, #233c79, transparent);
            transform: translateY(-50%);
            z-index: -1;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 4px;
            background: linear-gradient(90deg, #233c79, #4a6fb5);
            animation: expandLine 1.5s ease-out 0.5s both;
            box-shadow: 0 0 20px #233c79;
        }

        @keyframes expandLine {
            0% { width: 0; }
            100% { width: 150px; }
        }

        @keyframes slideInDown {
            0% {
                opacity: 0;
                transform: translateY(-50px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .content-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 80px;
            align-items: center;
            margin-bottom: 100px;
        }

        .text-content {
            animation: fadeInLeft 1.2s ease-out 0.8s both;
            position: relative;
        }

        .text-content h3 {
            font-size: 2.5rem;
            color: #233c79;
            margin-bottom: 30px;
            position: relative;
            display: inline-block;
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }

        .text-content p {
            font-size: 1.15rem;
            line-height: 2;
            margin-bottom: 25px;
            color: #cccccc;
            opacity: 0;
            animation: fadeInText 0.8s ease-out forwards;
