<head>
    <style>
        .wallet-confirm-box {
        background: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        max-width: 500px;
        margin: 40px auto;
        text-align: center;
        }

        .wallet-confirm-box h2 {
        color: #1a237e;
        margin-bottom: 20px;
        }

        .wallet-info p {
        font-size: 16px;
        margin: 10px 0;
        }

        .confirm-btn {
        background: #1a237e;
        color: #fff;
        border: none;
        padding: 12px 24px;
        margin-top: 20px;
        font-size: 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.2s ease;
        }

        .confirm-btn:hover {
        background: #0d1656;
        }

        .error-msg {
        color: red;
        margin-top: 20px;
        font-weight: bold;
        }

    </style>
</head>

<div class="container">
 

  <main class="main-content">
    <div class="wallet-confirm-box">
      <h2>&#128179; Wallet Payment Confirmation</h2>

      <div class="wallet-info">
        <p><strong>Your Wallet Balance:</strong> â‚¹{{walletBalance}}</p>
        <p><strong>Amount to Pay:</strong> {{amount}}</p>
      </div>
      {{#if noWallet}}
        <p class="error-msg">&#128269; No wallet found</p>
      {{else if insufficientBalance}}
        <p class="error-msg">&#10060; Insufficient balance in your wallet</p>
      {{else}}
        <form >
          <input type="hidden" name="itemId" value="{{itemId}}">
          <input type="hidden" name="amount" id="amount" value="{{amount}}">
          <input type="hidden" name="couponCode" value="{{couponCode}}">
          <button type="button" class="confirm-btn" onclick="confirmWalletPayment(event)">&#9989; Confirm Payment</button>
        </form>
      {{/if}}
    </div>
  </main>
</div>

<script>
    async function confirmWalletPayment(event){
        try{
            event.preventDefault()
            const amount=document.getElementById("amount").value;
            console.log("amount is",amount)
            const res=await fetch("/confirmWalletPayment",{
                method:"POST",
                headers:{"Content-type":"application/json"},
                body:JSON.stringify({amount})
            })

            let data=await res.json()
            if(res.ok){
              Toastify({
                  text: data.message,
                  duration: 3000,
                  close: true,
                  gravity: "top",
                  position: "center",
                  style: {
                  background: "linear-gradient(to right, #0f2027, #203a43, #2c5364)",
                  },
                  className: "custom-toast"
              }).showToast();
              setTimeout(()=>{
                window.location.href = '/loadMyOrder';
              },1500)
              
            }else{
              Toastify({
                  text: data.message,
                  duration: 3000,
                  close: true,
                   gravity: "top",
                  position: "center",
                  style: {
                  background: "linear-gradient(to right, #0f2027, #203a43, #2c5364)",
                  },
                  className: "custom-toast"
              }).showToast();
            }
        }catch(error){
            console.log("error in  confirmWalletPayment",error)
        }
    }
</script>


