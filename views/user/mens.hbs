    <style>
        .pagination {
            display: flex;
            justify-content: center;
            gap: 10px;
            padding: 20px 0;
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background-color: #fff;
            box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.1); 
            z-index: 1000;
        }

        .pagination .page-number,
        .pagination .page-btn {
            padding: 8px 14px;
            background-color: #f3f3f3;
            color: #333;
            border: 1px solid #ddd;
            border-radius: 6px;
            text-decoration: none;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .pagination .page-number.current {
            background-color: #111;
            color: #fff;
            font-weight: bold;
        }

        .pagination .page-number:hover,
        .pagination .page-btn:hover {
            background-color: #ddd;
        }

        .pagination button:disabled {
            background-color: #eee;
            color: #aaa;
            cursor: not-allowed;
        }
        


            .heading-option {
            background: linear-gradient(to right, #f5f5f5, #e8e8e8); 
            padding: 10px 0;
            color: #333;
            text-align: center;
            position: relative;
            z-index: 1;
            overflow: hidden;
            border-bottom: 1px solid #ddd;
            }

            .heading-option::before {
            content: "";
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(0, 0, 0, 0.03) 10%, transparent 70%);
            animation: pulse 6s infinite;
            z-index: 0;
            }

            .breadcrumb__text {
            position: relative;
            z-index: 2;
            }

            .breadcrumb__text p {
            font-size:26px;
            font-weight: bold;
            letter-spacing: 1px;
            margin: 0;
            color: #868585;
            text-transform: uppercase;
            }

            @keyframes pulse {
            0%, 100% {
                transform: rotate(0deg) scale(1);
            }
            50% {
                transform: rotate(360deg) scale(1.05);
            }
            }


    </style>
    
</head>


