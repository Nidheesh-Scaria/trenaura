<style>

.message-page {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  padding: 20px;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
}

.message-container {
  background: #ffffff;
  border-radius: 12px;
  padding: 48px 40px;
  box-shadow: 
    0 10px 25px rgba(0, 0, 0, 0.08),
    0 4px 10px rgba(0, 0, 0, 0.04);
  text-align: center;
  max-width: 500px;
  width: 100%;
  border: 1px solid rgba(255, 255, 255, 0.8);
  position: relative;
}

.message-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60px;
  height: 4px;
  background: linear-gradient(90deg, #667eea, #764ba2);
  border-radius: 0 0 4px 4px;
}

.message-container h2 {
  font-size: 1.875rem;
  font-weight: 600;
  color: #1a202c;
  margin-bottom: 16px;
  line-height: 1.3;
}

.message-container p {
  font-size: 1.125rem;
  color: #4a5568;
  line-height: 1.6;
  margin-bottom: 32px;
  max-width: 400px;
  margin-left: auto;
  margin-right: auto;
}

.btn-primary {
  display: inline-block;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 500;
  padding: 12px 32px;
  border-radius: 8px;
  transition: all 0.2s ease;
  box-shadow: 0 4px 14px rgba(102, 126, 234, 0.25);
  border: none;
  cursor: pointer;
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.35);
}

.btn-primary:active {
  transform: translateY(0);
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
}

.btn-primary:focus {
  outline: none;
  box-shadow: 
    0 4px 14px rgba(102, 126, 234, 0.25),
    0 0 0 3px rgba(102, 126, 234, 0.2);
}

/* Responsive Design */
@media (max-width: 768px) {
  .message-page {
    padding: 16px;
  }
  
  .message-container {
    padding: 36px 24px;
    border-radius: 10px;
  }
  
  .message-container h2 {
    font-size: 1.625rem;
    margin-bottom: 14px;
  }
  
  .message-container p {
    font-size: 1rem;
    margin-bottom: 28px;
  }
  
  .btn-primary {
    font-size: 0.95rem;
    padding: 11px 28px;
  }
}

@media (max-width: 480px) {
  .message-container {
    padding: 32px 20px;
  }
  
  .message-container h2 {
    font-size: 1.5rem;
  }
  
  .message-container p {
    font-size: 0.95rem;
  }
}

/* Animation Enhancement (optional) */
.message-container {
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Dark theme variant (optional) */
@media (prefers-color-scheme: dark) {
  .message-page {
    background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
  }
  
  .message-container {
    background: #2d3748;
    border-color: rgba(255, 255, 255, 0.1);
    box-shadow: 
      0 10px 25px rgba(0, 0, 0, 0.3),
      0 4px 10px rgba(0, 0, 0, 0.2);
  }
  
  .message-container h2 {
    color: #f7fafc;
  }
  
  .message-container p {
    color: #cbd5e0;
  }
}
</style>

<main class="message-page">
  <div class="message-container">
    <h2>{{title}}</h2>
    <p>{{message}}</p>
    {{#if redirectUrl}}
      <a href="{{redirectUrl}}" class="btn-primary">{{buttonText}}</a>
    {{/if}}
  </div>
</main>

