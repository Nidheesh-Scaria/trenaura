  <head><link rel="stylesheet" href="css/myAccount.css" type="text/css"></head>
  
  <div class="container">
    <aside class="sidebar">
      <div class="user-info">
        <img src="user-avatar.png" alt="User Avatar" class="avatar">
        <h3>Hello {{name}}</h3>
      </div>

      <nav class="menu">
        <h4>MY ORDERS</h4>
        <button>Account Settings</button>
        <button>Profile Information</button>
        <button>Manage Addresses</button>
        <button>Change Password</button>

        <h4>My Stuffs</h4>
        <button>My Coupons</button>
        <button>My reviews & ratings</button>
        <button>My Wallet</button>
        <form action="/logout" method="post">
        <button type="submit"  class="logout">Log out</button>
        </form>
      </nav>
    </aside>

    <main class="main-content">
      <div class="tabs">
        <button class="active-tab">My Orders</button>
        <button>Customer Support</button>
      </div>

      <div class="orders-header">
        <h2>My Orders</h2>
        <input type="search" placeholder="Search orders">
      </div>

      <section class="orders-list">
        <!-- Order Item 1 -->
        <div class="order-card">
          <img src="product1.jpg" alt="Product 1">
          <div class="order-info">
            <h3>Geisha Warrior Oversized Anime T-Shirt</h3>
            <p>₹2199 <span class="strikethrough">₹5999</span></p>
          </div>
          <div class="order-status">
            <p class="green">Expected on 20 Feb 2025</p>
            <small>Know updates</small>
            <div class="buttons">
              <button>Cancel</button>
              <button>Details</button>
            </div>
          </div>
        </div>

        <!-- Order Item 2 -->
        <div class="order-card">
          <img src="product2.jpg" alt="Product 2">
          <div class="order-info">
            <h3>Samurai Bloodlust Oversized T-Shirt</h3>
            <p>₹999 <span class="strikethrough">₹1999</span></p>
          </div>
          <div class="order-status">
            <p class="red">Canceled on 31 Jan, 2024</p>
            <small>Delivery agent can't reach you</small>
          </div>
        </div>

        <!-- Order Item 3 -->
        <div class="order-card">
          <img src="product3.jpg" alt="Product 3">
          <div class="order-info">
            <h3>Samurai Bloodlust Oversized T-Shirt</h3>
            <p>₹1999 <span class="strikethrough">₹2999</span></p>
          </div>
          <div class="order-status">
            <p class="green">Delivered on 20 Jan, 2024</p>
            <small>Your item was delivered</small>
            <div class="buttons">
              <button>Return</button>
              <button>Review</button>
            </div>
          </div>
        </div>

        <!-- Order Item 4 -->
        <div class="order-card">
          <img src="product4.jpg" alt="Product 4">
          <div class="order-info">
            <h3>Samurai Bloodlust Oversized T-Shirt</h3>
            <p>₹599 <span class="strikethrough">₹999</span></p>
          </div>
          <div class="order-status">
            <p class="orange">Refund completed</p>
            <small>Return due to different size</small>
            <p class="rate-review">Rate & Review Product</p>
          </div>
        </div>
      </section>
    </main>
  </div>