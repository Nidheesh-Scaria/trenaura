<body>
  
<div class="account-container">
    {{> user/sidebar }} 


  <main class="wallet-container">
    <h1>Trenaura Wallet</h1>
    <h5 class="tagline">Keep it simple. Keep it safe. Keep it in your wallet.</h5>

    <div class="wallet-summary">
      <div class="balance-box">
        <h3>Total Balance</h3>
        <p class="total" id="totalBalance">₹ {{wallet.balance}}</p>
        <div class="balance-breakup">
          {{!-- <p>Wallet <span>₹ {{wallet.balance}}</span></p>
          <p>Gift cards <span>₹ {{wallet.giftcards}}</span></p> --}}
        </div>
      </div>

      <div class="wallet-options">
        <h4>Do more with Trenaura Wallet</h4>
        <ul>
          <li><a href="#">Add gift cards to wallet</a></li>
          <li><a onclick="openInfoModal()">How to add cash to balance</a></li>

          <li><a href="/walletTransactionHistory">Check Wallet transaction history</a></li>
        </ul>
        {{!-- <div class="account-settings">
          <i class="fa fa-user-gear"></i> Account Settings
        </div> --}}
      </div>
    </div>

    <div class="wallet-actions">
      <h3>Add money to wallet</h3>
      <div class="money-input">
        <span>₹</span>
        <input type="number" name="amount" id="amount" value="1000" min="1" />
      </div>
      <div class="quick-buttons">
        <button onclick="incrementAmount(500)">+ ₹ 500</button>
        <button onclick="incrementAmount(1000)">+ ₹ 1000</button>
        <button onclick="incrementAmount(1500)">+ ₹ 1500</button>
      </div>
      <button class="add-btn" onclick="addMoneyToWallet()">Add money to wallet</button>
    </div>

   
  </main>
</div>

{{!--info modal --}}

<div id="walletModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <h3>Add Money to Your Wallet</h3>
    <p><strong>Step 1:</strong> Enter the amount you want to add in the input box above.</p>
    <p><strong>Step 2:</strong> Click <strong>"Add money to wallet"</strong>.</p>
    <p><strong>Step 3:</strong> You will be redirected to a secure Razorpay payment page.</p>
    <p><strong>Step 4:</strong> Once payment is successful, your wallet balance will update immediately.</p>
    <button class="modal-btn" onclick="closeModal()">Got it!</button>
  </div>
</div>

<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  const amountInput = document.getElementById("amount");

  function getInputValue() {
    const amount = Number(amountInput.value);
    if (isNaN(amount) || amount <= 0) {
      alert("Please enter a valid amount");
      return null;
    }
    return amount;
  }

  function incrementAmount(value) {
    const current = Number(amountInput.value) || 0;
    amountInput.value = current + value;
  }


async function addMoneyToWallet() {

  const amount = getInputValue();
  if (amount === null) return; 

  console.log("addMoneyToWallet",amount)
  //creating razorpay order
  const res = await fetch("/create-razorpay-order-wallet", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ amount }),
  });

  const razorData = await res.json();
  console.log("key",razorData.key)

  const options = {
    key: razorData.key,
    amount: razorData.amount * 100,
    currency: razorData.currency,
    order_id: razorData.orderId,
    name: "Trenaura",
    description: "The Aura of Trend",
    handler: async function (response) {
      //payment verification in backend
      const verifyRes = await fetch("/verify-payment-wallet", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(response),
      });

      const verifyData = await verifyRes.json();

      if (verifyData.success) {
       


       Toastify({
          text: verifyData.message || "Wallet added ",
          duration: 3000,
          close: true,
          gravity: "top",
          position: "center",
          style: {
            background:
              "linear-gradient(to right, #0f2027, #203a43, #2c5364)",
          },
          className: "custom-toast",
        }).showToast();

        document.getElementById("totalBalance").innerText=`₹ ${verifyData.balance}`
        

      } else {
        Toastify({
          text: verifyData.message || "Payment verification failed",
          duration: 3000,
          close: true,
          gravity: "top",
          position: "center",
          style: {
            background:
              "linear-gradient(to right,#730202f2, #ba0d0d, #e00808e8)",
          },
          className: "custom-toast",
        }).showToast();
        
      }
    },
    theme: {
      color: "#3399cc",
    },
  };

  // Step 5: Open Razorpay
  const rzp1 = new window.Razorpay(options);
  rzp1.open();
}  


//modal management

function openInfoModal(){
  document.getElementById("walletModal").style.display="block"
}

function closeModal(){
  document.getElementById("walletModal").style.display="none"
}

</script>


</body>



