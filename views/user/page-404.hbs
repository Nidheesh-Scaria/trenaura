  width: 90%;
}

.logo {
  height:4.5rem;
    width:20rem;
  margin-bottom: 30px;
}

.error-code {
  font-size: 48px;
  font-weight: bold;
  color: #333;
}

p {
  font-size: 18px;
  margin: 10px 0;
}

.home-link {
  color: red;
  text-decoration: none;
  font-weight: bold;
}

.home-link:hover {
  text-decoration: underline;
}

  </style>
</head>
